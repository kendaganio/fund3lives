<div class="row collapse">
  <div class="four columns offset-by-four">
    <h2>Sign up!</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div class="<%= 'error' if resource.errors[:email].present? %>">
        <%= f.label :email, "Email #{resource.errors[:email][0]}" %><br />
        <%= f.text_field :email %>
      </div>

      <div class="<%= 'error' if resource.errors[:password].present? %>">
        <%= f.label :password, "Password #{resource.errors[:password][0]}" %><br />
        <%= f.password_field :password %>
      </div>

      <div class="<%= 'error' if resource.errors[:password_confirmation].present? %>">
        <%= f.label :password_confirmation, "Password Confirmation #{resource.errors[:password_confirmation][0]}" %><br />
        <%= f.password_field :password_confirmation %>
      </div>


      <div><%= f.submit "Sign up", class: 'medium button' %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>